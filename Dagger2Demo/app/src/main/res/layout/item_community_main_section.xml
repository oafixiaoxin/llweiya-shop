<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="@dimen/llweiya_padding"
        android:paddingBottom="@dimen/llweiya_padding"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        
        <ImageView
            android:layout_width="@dimen/llweiya_image_48"
            android:layout_height="@dimen/llweiya_image_48"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_course"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/text_normal_course"
            android:textSize="@dimen/llweiya_text_size_12"
            android:textColor="@color/llweiya_text_color_black"
            android:gravity="center"
            android:maxLines="1"
            android:ellipsize="end"/>
        
    </LinearLayout>

</LinearLayout>