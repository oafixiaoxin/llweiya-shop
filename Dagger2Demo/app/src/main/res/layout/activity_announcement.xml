        <TextView
            android:id="@+id/txt_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="yanshuxin"
            android:textSize="16sp"
            android:textColor="#000000"
            android:maxLines="5"
            android:gravity="center"/>

    </LinearLayout>

</layout>
